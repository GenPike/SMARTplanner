@model IEnumerable<ProjectListItemViewModel>
@{
    ViewBag.Title = "Projects";
}

<h4>Projects</h4>

<div class="row">
    <div class="col s6">
        <ul class="tabs">
            <li class="tab col s2"><a class="active" href="#test1">All</a></li>
            <li class="tab col s2"><a href="#test2">Involved</a></li>
            <li class="tab col s2"><a href="#test3">Created</a></li>
        </ul>
    </div>
    <div class="col s6 right-align">
        <a href="!#" class="btn">Create project</a>
    </div>
</div>

@if (Model.Count() != 0)
{
    <ul>
        @foreach (var proj in Model)
        {
            @Html.Partial("_ProjectListItemPartial", proj)
        }
    </ul>
}
else
{
    <h5>You have no project to collaborate in!</h5>
}