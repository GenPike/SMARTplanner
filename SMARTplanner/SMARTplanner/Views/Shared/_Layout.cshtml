<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SMARTplanner</title>
    @Scripts.Render("~/bundles/modernizr")
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materialize.min.css" rel="stylesheet" media="screen,projection" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <nav>
        <div class="nav-wrapper teal lighten-2">
            <div class="container">
                <ul class="left">
                    <li style="font-weight: bold;">@Html.ActionLink("SMARTplanner", "Index", "Home")</li>
                    @if (!Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Projects", "Index", "Project")</li>
                        <li>@Html.ActionLink("Issues", "Contact", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <footer class="page-footer teal lighten-2">
            <div class="row center white-text">
                Kyiv, Ukraine, Parkova Doroga 16a<br />
                info@smartplanner.com
            </div>
            <div class="footer-copyright">
                <div class="center">
                    &copy; @DateTime.Now.Year - SMARTplanner
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/materialize.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
