@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "right" }))
    {
        @Html.AntiForgeryToken()

        <ul id="dropdown_userinfo" class="dropdown-content">
            <li><a href="">My Profile</a></li>
            <li class="divider"></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>

        <ul class="right">
            <li>
                <a class="dropdown-button" href="@Url.Action("Index", "Manage", routeValues: null)"
                   data-activates="dropdown_userinfo">
                    @User.Identity.GetUserName()
                    <i class="material-icons right">arrow_drop_down</i>
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="right">
        <li>
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </li>
    </ul>
}
